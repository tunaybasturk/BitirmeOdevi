<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Alt katman, genel arka plan rengi -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Üst kısım için çizgi -->
    <item android:top="-1dp" android:left="-2dp" android:right="-2dp" android:height="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bottom_nav_not_selected" />
        </shape>
    </item>

    <!-- Çökük efektinin arka planı -->
    <item android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomRightRadius="100dp" android:bottomLeftRadius="100dp" />
        </shape>
    </item>

</layer-list>